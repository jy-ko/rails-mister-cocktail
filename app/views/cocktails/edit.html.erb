<div class="nav">
  <h3><%= link_to "Shaker🍸", cocktails_path %></h3>
</div>


<div class="container pt-3">
    <h3>Edit your cocktail</h3>

    <%= simple_form_for @cocktail, :html=> { class: 'form' }  do |f| %>
      <%= f.input :name %>
      <%= f.submit "Update Name", class: "btn btn-primary" %>
    <% end %>

  <% @cocktail.doses.each do |dose| %>
        <div class="d-flex pt-3">
          <p class="pr-2"> <%= dose.description %> | <%= dose.ingredient.name %> </p>
          <%= link_to dose_path(dose), method: :delete do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
  <% end %>

  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), :class => "btn btn-flat" %>
  </div>
